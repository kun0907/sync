<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Process">
    <resultMap type="Process" id="processMap">
        <id column="process_id" property="processId"/>
        <result column="process_name" property="processName"/>
        <result column="process_type" property="processType"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_user_name" property="createUserName"/>
    </resultMap>
    <select id="selectAll" resultMap="processMap">
        select * from sys_process
    </select>
    <select id="selectByPk" resultMap="processMap">
        select * from sys_process where process_id = #{processId}
    </select>
    <!-- 插入流程定义 -->
    <insert id="insert" useGeneratedKeys="false">
        insert into sys_process (
        process_id,process_name,process_type,create_time,create_user_id,create_user_name
        ) values (
        #{processId},#{processName},#{processType},#{createTime},#{createUserId},
        #{createUserName}
        )
    </insert>
    <!-- 更新流程定义 -->
    <update id="update">
        update sys_process
        <set>
            process_name = #{processName},process_type = #{processType}
        </set>
        where process_id = #{processId}
    </update>
    <!-- 分页查询权限信息  -->
    <select id="selectByCondition" resultMap="processMap" parameterType="map">
        select * from (
        select sp.process_id, sp.process_name,dic.dictionary_name  as process_type, sp.create_time, sp.create_user_id, sp.create_user_name,
        ROW_NUMBER()OVER(order by sp.create_time) r from sys_process sp
        left join sys_dictionary dic on sp.process_type=dic.dictionary_code
        ) s where s.r between #{page.startPos} and ((#{page.pageSize}+#{page.startPos})-1)
    </select>
    <select id="countByCondition" resultType="int" parameterType="map">
        select count(*) from sys_process sp
    </select>
    <select id="checkType" resultMap="processMap" >
        select * from sys_process  where process_type = #{processType}
    </select>
    <delete id="delete" parameterType="string">
        delete from sys_process where process_id = #{processId}
    </delete>
</mapper>