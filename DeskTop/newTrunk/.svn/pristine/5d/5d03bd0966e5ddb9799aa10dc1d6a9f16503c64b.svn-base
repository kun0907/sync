<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="UnitConversion">
	
	<resultMap type="UnitConversion" id="UnitConversionMap">
		<id column="unit_conversion_id" property="unitconversionId"/>
		<result column="unit_code_main" property="unitCodeMain" />
		<result column="unit_code_secondary" property="unitCodeSecondary" />
		<result column="conversion" property="conversion" />
	</resultMap>
	
	<!-- 根据条件分页查询条目 -->
	<select id="selectByCondition" resultMap="UnitConversionMap" parameterType="map">
		select * from(
			select
			unit_conversion_id,
			Munit.dictionary_name as unit_code_main,
			Sunit.dictionary_name as unit_code_secondary,
			uc.conversion,
			ROW_NUMBER() OVER(order by uc.unit_code_main) r
			from
			sys_unit_conversion uc
			left join
			sys_dictionary Munit
			on Munit.dictionary_code = uc.unit_code_main
			left join
			sys_dictionary Sunit
			on Sunit.dictionary_code = uc.unit_code_secondary
			<where>
				1=1
				<if test="UnitConversion!=null">
					<if test="UnitConversion.unitCodeMain!=null and UnitConversion.unitCodeSecondary!=''">
						and uc.unit_code_main like '%'||#{UnitConversion.unitCodeMain}||'%'
					</if>
					<if test="UnitConversion.unitCodeSecondary!=null and UnitConversion.unitCodeSecondary!=''">
						and uc.unit_code_secondary like '%'||#{UnitConversion.unitCodeSecondary}||'%'
					</if>
				</if>
			</where>
		) s
		where s.r between #{page.startPos} and ((#{page.pageSize}+#{page.startPos})-1)
	</select>
	
	<!-- 根据条件查询条目数 -->
	<select id="countByCondition" resultType="int" parameterType="map">
		select count(*) from sys_unit_conversion uc
		<where>
			1=1
			<if test="UnitConversion!=null">
				<if test="UnitConversion.unitCodeMain!=null and UnitConversion.unitCodeSecondary!=''">
					and uc.unit_code_main like '%'||#{UnitConversion.unitCodeMain}||'%'
				</if>
				<if test="UnitConversion.unitCodeSecondary!=null and UnitConversion.unitCodeSecondary!=''">
					and uc.unit_code_secondary like '%'||#{UnitConversion.unitCodeSecondary}||'%'
				</if>
			</if>
		</where>
	</select>
	
	<!-- 根据ID查询单个实体 -->
	<select id="selectByPk" resultMap="UnitConversionMap" parameterType="string">
		select * from sys_unit_conversion uc where uc.unit_conversion_id = #{unitconversionId}
	</select>
	
	<!-- 插入一个实体 -->
	<insert id="insert" parameterType="UnitConversion" useGeneratedKeys="false">
		insert into sys_unit_conversion(
			unit_conversion_id, unit_code_main, unit_code_secondary, conversion
		)values(
			#{unitconversionId}, #{unitCodeMain}, #{unitCodeSecondary}, #{conversion}
		)
	</insert>
	
	<!-- 更新一个实体 -->
	<update id="update" parameterType="UnitConversion">
		update sys_unit_conversion
		<set>
			<if test="unitCodeMain!=null and unitCodeMain!=''">unit_code_main = #{unitCodeMain}</if>
			<if test="unitCodeSecondary!=null and unitCodeSecondary!=''">unit_code_secondary = #{unitCodeSecondary}</if>
			<if test="conversion!=null and conversion!=''">conversion = #{conversion}</if>
		</set>
		where unit_conversion_id = #{unitconversionId}
	</update>
	
	<!-- 删除一个实体 -->
	<delete id="delete" parameterType="string">
		delete from sys_unit_conversion where unit_conversion_id = #{unitconversionId}
	</delete>
	
</mapper>