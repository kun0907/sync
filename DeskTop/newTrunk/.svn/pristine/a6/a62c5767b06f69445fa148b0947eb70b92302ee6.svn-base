			$.ajax({
				url:'${emms}/system/businessDictionary.do?cmd=loadDicByCode&dicCode=transport_mode',
				dataType : 'json',
				type : 'POST',
				async:false,
				success: function (data){
					for(var i=0;i<data.length;i++){
						var obj=data[i].dictionaryCode;
						dictionary[obj]=data[i].dictionaryName;
					}
