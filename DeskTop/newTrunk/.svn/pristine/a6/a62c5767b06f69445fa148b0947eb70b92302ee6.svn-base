                            }else{
                                i++;
                            }
                        }
                        if(detailByPackage.length>0){
                            $('#detail').datagrid('loadData',{total:detailByPackage.length,rows:detailByPackage});
                        }else{
                            $('#detail').datagrid('loadData',{total:0,rows:[]});
                        }
                        lastIndex = rowIndex;
					}
