<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProcessDetail">
    <resultMap type="ProcessDetail" id="processDetailMap">
        <id column="process_detail_id" property="processDetailId"/>
        <result column="process_id" property="processId"/>
        <result column="process_detail_level" property="processDetailLevel"/>
        <result column="role_id" property="roleId"/>
        <result column="is_check" property="isCheck"/>
        <result column="sequence" property="sequence"/>

    </resultMap>
    <select id="selectByPk" resultMap="processDetailMap">
        select * from sys_process_detail where process_detail_id = #{processDetailId}
    </select>
    <!-- 插入流程定义 -->
    <insert id="insert" useGeneratedKeys="false">
        insert into sys_process_detail (
        process_detail_id,process_id,process_detail_level,role_id,is_check,sequence
        ) values (
        #{processDetailId},#{processId},#{processDetailLevel},#{roleId},#{isCheck},,#{sequence}
        )
    </insert>
    <!-- 更新流程定义 -->
    <update id="update">
        update sys_process_detail
        <set>
            process_detail_level = #{processDetailLevel},role_id = #{roleId}
        </set>
        where process_detail_id = #{processDetailId}
    </update>
    <delete id="delete" parameterType="string">
        delete from sys_process_detail where process_detail_id = #{processDetailId}
    </delete>
    <delete id="deleteByParentId" parameterType="string">
        delete from sys_process_detail where process_id = #{parentId}
    </delete>
    <!-- 分页查询权限信息  -->
    <select id="selectByCondition" resultMap="processDetailMap" parameterType="map">
        select * from (
        select de.process_detail_id, de.process_id,de.process_detail_level,ro.role_name as role_id, de.is_check,
        ROW_NUMBER()OVER(order by de.process_detail_level) r from sys_process_detail de
        left join sys_role ro on de.role_id=ro.role_id
        <where>
            1=1
            <if test="ProcessCondition!=null">
                <if test="ProcessCondition.processId != null and ProcessCondition.processId != ''">
                    and de.process_id = #{ProcessCondition.processId}
                </if>
                <if test="ProcessCondition.roleId != null and ProcessCondition.roleId != ''">
                    and de.role_id = #{ProcessCondition.roleId}
                </if>
            </if>
        </where>
        ) s where s.r between #{page.startPos} and ((#{page.pageSize}+#{page.startPos})-1)
    </select>
    <select id="countByCondition" resultType="int" parameterType="map">
        select count(*) from sys_process_detail de
        left join sys_role ro on de.role_id=ro.role_id
        <where>
            1=1
            <if test="ProcessCondition!=null">
                <if test="ProcessCondition.processId != null and ProcessCondition.processId != ''">
                    and de.process_id = #{ProcessCondition.processId}
                </if>
                <if test="ProcessCondition.roleId != null and ProcessCondition.roleId != ''">
                    and de.role_id = #{ProcessCondition.roleId}
                </if>
            </if>
        </where>
    </select>
    <select id="selectByParentId" resultMap="processDetailMap">
        select * from sys_process_detail where process_id = #{parentId} order by sequence
    </select>
</mapper>