<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserRole">
	<resultMap type="UserRole" id="userRoleMap">
		<result column="user_id" property="userId"/>
		<association property="resource" column="resource_id" resultMap="Resource.resourceMap"></association>
		<association property="role" column="role_id" resultMap="Role.roleMap"></association>
	</resultMap>
	
	<!-- 根据用户id查询用户角色关联信息 -->
	<select id="selectCheckRoleByUser" parameterType="string" resultMap="userRoleMap">
		select distinct sur.role_id from sys_user_resource  sur
		<where>
			sur.user_id = #{userId}
		</where>
	 </select>
	<!-- 批量插入用户权限角色信息 -->
	<insert id="insertList" parameterType="java.util.List" useGeneratedKeys="false">
			insert into sys_user_resource
			(user_id,resource_id,role_id)
			SELECT A.*
			FROM(
			<foreach collection="list" item="item" index="index" separator="UNION ALL">
				(SELECT 
				#{item.userId,jdbcType=VARCHAR} user_id,
				#{item.resource.resourceId,jdbcType=VARCHAR} resource_id,
				#{item.role.roleId,jdbcType=VARCHAR} role_id
				FROM dual)
			</foreach>
			)A 
		</insert>
	<!-- 根据用户id删除用户角色表 -->
	<delete id="deleteUserRoleByUserId" parameterType="string">
		delete from sys_user_resource sur where user_id = #{userId}
	</delete>
	
	<select id="selectUserRoleByUser" resultMap="userRoleMap" parameterType="string">
		select * from sys_user_resource sur
		<where>
			sur.user_id =  #{userId}
		</where>
	</select>

</mapper>